# Port to run the application
PORT=3001

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3001

# Allow search engines to crawl the site (true/false)
NEXT_PUBLIC_ALLOW_ROBOTS=false

# Allowed hostnames for images (comma-separated list)
# Example: placehold.co,example.com,cdn.example.com
NEXT_PUBLIC_ALLOWED_IMAGE_HOSTNAMES=placehold.co

# Allowed hostnames for external resources (comma-separated list)
# These will be included in Content Security Policy when STRICT_CSP=false
# Example: api.example.com,cdn.example.com,fonts.googleapis.com
NEXT_PUBLIC_ALLOWED_HOSTNAMES=

# Environment (development, production)
NODE_ENV=development

# Content Security Policy
# true = strict mode (only 'self', no external resources)
# false = relaxed mode (allows data URIs, blobs, and ALLOWED_HOSTNAMES)
NEXT_PUBLIC_STRICT_CSP=true

# Development-specific image hostnames (for local development)
NEXT_PUBLIC_DEV_IMAGE_HOSTNAMES=localhost,127.0.0.1
